<h1>Edit Post</h1>

<%= form_tag show_post_url(@item.id), method: 'patch' do %>

  <label for="title">Title:</label>
  <input id="title" type="text" name="title" value="<%= @item.title %>" size="60">
    <br>
  <label for="desc">Description:</label>
  <textarea id="desc" name="desc"  cols="60" rows="5"><%= @item.desc %></textarea>
    <br>
  <%= label_tag 'date', 'Date' %>
  <%= text_field_tag 'date' ,  "#{@item.date}" %>
    <br>
   <%= label_tag 'author', "Author:" %>
   <%= text_field_tag 'author' , "#{@item.author}" %>
    <br>
    <%= label_tag "img" , "Image URL:" %>
    <%= text_field_tag 'img' , "#{@item.img}", size: "80" %>
    <br>
  <input type="submit">

<% end %>
